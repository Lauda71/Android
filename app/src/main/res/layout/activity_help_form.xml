<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".HelpFormActivity">

    <TextView
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Обратная связь"
        android:textColor="@color/black"
        android:gravity="center"
        android:textSize="25dp">
    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"

        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="Как Вас зовут?">
        </TextView>

        <EditText
            android:id="@+id/client_name"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:inputType="textPersonName"
            android:text="Вася">
        </EditText>

        <TextView
            android:paddingTop="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="Укажите контактный номер телефона:">
        </TextView>

        <EditText
            android:id="@+id/client_number"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:inputType="phone"
            android:text="+7-800-200-23-16">
        </EditText>

        <TextView
            android:paddingTop="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="Опишите, что случилось:">
        </TextView>

        <EditText
            android:id="@+id/client_info"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:lines="5"
            android:text="Курьер не пришел..."
            android:textSize="20dp">
        </EditText>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="20dp"
        android:gravity="center">

        <Button
            android:id="@+id/but_send"
            android:onClick="ClickSend"

            android:layout_marginTop="20dp"
            android:gravity="center"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_edittext_pinky"
            android:textColor="@color/white"
            android:text="Отправить данные">
        </Button>

        <Button
            android:id="@+id/but_cancel"
            android:onClick="ClickCancel"

            android:layout_marginTop="40dp"
            android:gravity="center"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_edittext_pinky"
            android:textColor="@color/white"
            android:text="Отмена">
        </Button>

    </LinearLayout>


</LinearLayout>